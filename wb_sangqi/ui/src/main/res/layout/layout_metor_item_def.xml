<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/img"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/dimen_2dp"
      android:scaleType="fitXY"
      />

  <ImageView
      android:id="@+id/tag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/dimen_40dp"
      />

  <ImageView
      android:id="@+id/hot_tag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      />

  <!--<com.makeramen.roundedimageview.RoundedImageView-->
  <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
  <!--android:id="@+id/img"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="match_parent"-->
  <!--android:scaleType="fitCenter"-->
  <!--android:src="@mipmap/place_def"-->
  <!--app:riv_corner_radius="@dimen/dimen_15dp"-->
  <!--app:riv_mutate_background="true"-->
  <!--app:riv_oval="true"-->
  <!--/>-->
  <!--app:riv_tile_mode="repeat"-->

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@drawable/bg_metro_floor_text"
      android:gravity="center_horizontal"
      android:paddingBottom="@dimen/dimen_5dp"
      android:paddingLeft="@dimen/dimen_20dp"
      android:paddingTop="@dimen/dimen_5dp"
      android:text="英雄联盟"
      android:textColor="@color/common_text_color"
      android:textSize="@dimen/txtsize_36sp"
      />

  <RelativeLayout
      android:id="@+id/bottom_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:visibility="gone"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/area"
        android:background="#66000000"
        >
      <!--android:paddingBottom="@dimen/dimen_5dp"-->
      <!--android:paddingTop="@dimen/dimen_5dp"-->

      <ImageView
          android:id="@+id/ykq"
          android:layout_width="@dimen/dimen_60dp"
          android:layout_height="@dimen/dimen_60dp"
          android:layout_centerVertical="true"
          android:paddingLeft="@dimen/dimen_20dp"
          android:src="@mipmap/icon_ykq"
          />

      <ImageView
          android:id="@+id/sb"
          android:layout_width="@dimen/dimen_40dp"
          android:layout_height="@dimen/dimen_40dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dimen_10dp"
          android:layout_toRightOf="@+id/ykq"
          android:src="@mipmap/icon_sb"
          />

      <TextView
          android:id="@+id/num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:paddingRight="@dimen/dimen_30dp"
          android:text="5万+"
          android:textColor="@color/common_text_color"
          android:textSize="@dimen/txtsize_26sp"
          />

    </RelativeLayout>

    <TextView
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_max_v_item_title"
        android:gravity="center"
        android:padding="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:text="视频专区"
        android:textSize="@dimen/txtsize_30sp"
        android:textStyle="bold"
        />
  </RelativeLayout>

  <ImageView
      android:id="@+id/play"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:src="@mipmap/icon_play"
      android:visibility="gone"
      />

  <View
      android:id="@+id/bg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:duplicateParentState="true"
      />
</RelativeLayout>
