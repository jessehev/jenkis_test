<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:focusable="true"
android:focusableInTouchMode="true"
android:orientation="vertical"
    >

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:duplicateParentState="true"
    android:padding="@dimen/dimen_10dp"
    android:text="热门推荐"
    android:textColor="@android:color/darker_gray"
    android:textSize="@dimen/txtsize_38sp"
    />

<ImageView
    android:id="@+id/img"
    android:layout_width="@dimen/dimen_180dp"
    android:layout_height="@dimen/dimen_24dp"
    android:layout_below="@+id/title"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/icon_nav"
    android:duplicateParentState="true"
    android:visibility="gone"
    />

<View
    android:id="@+id/red_spot"
    android:layout_width="@dimen/dimen_20dp"
    android:layout_height="@dimen/dimen_20dp"
    android:layout_marginLeft="@dimen/dimen_45dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_toRightOf="@+id/title"
    android:background="@drawable/shap_red_spot"
    android:visibility="gone"
    />

</RelativeLayout>