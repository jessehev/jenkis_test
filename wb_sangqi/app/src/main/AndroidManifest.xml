    <!-- ################################## provider ########################################## -->
    <provider
        android:name="com.utstar.appstoreapplication.common.db.UserIDProvider"
        android:authorities="com.utstar.appstoreapplication.common.db.UserIDProvider"
        android:exported="true">
    </provider>


    <!-- ################################## service ########################################## -->
    <service android:name=".service.DownloadServer"/>
    <service
        android:name=".tinker.service.TinkerResultService"
        android:exported="false"/>
    <service android:name=".service.HotUpdateService"/>

    <service android:name=".service.DayTaskRemoteService">
      <intent-filter>
        <action android:name="com.utstar.appstoreapplication.activity.dayTaskRemote"/>
      </intent-filter>
    </service>

    <service
        android:name=".Probe.ProbeService"
        android:process=":com.wb.probe">
      <intent-filter>
        <action android:name="com.wb.probe"/>

        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </service>

    <service android:name=".service.LifeService"/>
    <service android:name=".service.LogcatService"/>


    <!-- ################################## receiver ########################################## -->
    <receiver
        android:name=".receiver.InstallReceiver"
        android:enabled="true">
      <intent-filter>
        <action android:name="android.intent.action.PACKAGE_ADDED"/>
        <action android:name="android.intent.action.PACKAGE_REMOVED"/>
        <action android:name="android.intent.action.PACKAGE_REPLACED"/>
        <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED"/>

        <data android:scheme="package"/>
      </intent-filter>
    </receiver>
    <receiver
        android:name=".receiver.DayTaskReceiver"
        android:enabled="true">
      <intent-filter>
        <action android:name="ACTION_DAY_TASK"/>
      </intent-filter>
    </receiver>


