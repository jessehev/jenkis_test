<resources>

  <!-- Base application theme. -->
  <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
  <!-- Customize your theme here. -->
  <!--<item name="colorPrimary">@color/colorPrimary</item>-->
  <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
  <!--<item name="colorAccent">@color/colorAccent</item>-->
  <!--</style>-->

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:configChanges">
      mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale
    </item>
    <item name="android:screenOrientation">landscape</item>
    <item name="android:label">@string/app_name</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:windowBackground">@mipmap/bg_base</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:configChanges">
      mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale
    </item>
    <item name="android:screenOrientation">landscape</item>
    <item name="android:label">@string/app_name</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:windowBackground">@mipmap/bg_launcher_2</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="gameDetailRatingBar" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/game_detail_rating_bar</item>
    <item name="android:layout_height">18dp</item>
    <item name="android:layout_width">wrap_content</item>

  </style>

  <style name="blur_dialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="SearchKeyPopItem">
    <item name="android:textSize">@dimen/txtsize_23sp</item>
    <item name="android:layout_width">@dimen/dimen_50dp</item>
    <item name="android:layout_height">@dimen/dimen_50dp</item>
    <item name="android:background">@drawable/selector_search_key_pop_view</item>
    <item name="android:gravity">center</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="UpdateDialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <declare-styleable name="AdverView">
    <attr format="integer" name="intervalTime"/>
    <attr format="integer" name="animDuration"/>
  </declare-styleable>
</resources>
