<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:padding="@dimen/dimen_28dp"
      android:text="游戏卸载提示"
      android:textColor="@color/white"
      android:textSize="@dimen/txtsize_52sp"
      android:textStyle="bold"
      />

  <View
      android:id="@+id/line"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@+id/title"
      android:layout_marginLeft="@dimen/dimen_4dp"
      android:layout_marginRight="@dimen/dimen_4dp"
      android:background="#6C6BDD"
      />

  <TextView
      android:id="@+id/hint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/line"
      android:layout_marginLeft="@dimen/dimen_40dp"
      android:layout_marginTop="@dimen/dimen_20dp"
      android:text="您的盒子剩余空间不足，建议卸载部分游戏。"
      android:textSize="@dimen/txtsize_40sp"
      />

  <android.support.v17.leanback.widget.VerticalGridView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/line_1"
      android:layout_below="@+id/hint"
      android:layout_marginBottom="@dimen/dimen_20dp"
      android:layout_marginLeft="@dimen/dimen_40dp"
      android:layout_marginRight="@dimen/dimen_40dp"
      android:layout_marginTop="@dimen/dimen_20dp"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:fadeScrollbars="true"
      android:focusable="false"
      android:scrollbarStyle="insideOverlay"
      app:horizontalMargin="@dimen/dimen_10dp"
      app:numberOfColumns="5"
      />

  <View
      android:id="@+id/line_1"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_above="@+id/bottom_bar"
      android:layout_marginLeft="@dimen/dimen_4dp"
      android:layout_marginRight="@dimen/dimen_4dp"
      android:background="#6C6BDD"
      android:focusable="false"
      />

  <RelativeLayout
      android:id="@+id/bottom_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:focusable="false"
      android:paddingBottom="@dimen/dimen_20dp"
      android:paddingTop="@dimen/dimen_20dp"
      >

    <Button
        android:id="@+id/uninstall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/selector_game_btn_uninstall"
        android:paddingLeft="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_30dp"
        android:text="一键卸载"
        />

    <RelativeLayout
        android:id="@+id/hit_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        >

      <!--<TextView-->
      <!--android:id="@+id/bottom_hint"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_centerVertical="true"-->
      <!--android:layout_marginLeft="@dimen/dimen_40dp"-->
      <!--android:text="小提示：删除单机游戏后，存档将随之删除。"-->
      <!--android:textSize="@dimen/txtsize_40sp"-->
      <!--android:textStyle="bold"-->
      <!--/>-->
      <TextView
          android:id="@+id/text_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimen_40dp"
          android:text="小提示：您也可以到"
          android:textSize="@dimen/txtsize_32sp"
          />

      <TextView
          android:id="@+id/text_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/text_1"
          android:text="【我的游戏】-【已下载游戏】"
          android:textSize="@dimen/txtsize_32sp"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/text_3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/text_2"
          android:text="卸载更多游戏。"
          android:textSize="@dimen/txtsize_32sp"
          />
    </RelativeLayout>
  </RelativeLayout>

</RelativeLayout>
