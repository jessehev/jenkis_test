<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout
      android:layout_width="@dimen/dimen_1264dp"
      android:layout_height="@dimen/dimen_1038dp"
      android:layout_gravity="center"
      android:background="@mipmap/bg_package"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/hitn_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_45dp"
        android:textSize="@dimen/txtsize_59sp"
        android:textStyle="bold"
        />
    <!--android:text="@string/package_title"-->
    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/dimen_105dp"
        android:layout_marginTop="@dimen/dimen_80dp"
        android:textSize="@dimen/txtsize_37sp"
        android:textStyle="bold"
        />
    <!--   android:text="@string/package_hint"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_100dp"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_200dp"
        >
      <android.support.v4.view.ViewPager
          android:id="@+id/vp"
          android:layout_width="@dimen/dimen_1095dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/dimen_50dp"
          android:layout_marginRight="@dimen/dimen_50dp"
          />
      <ImageView
          android:id="@+id/left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:src="@mipmap/icon_arrow_left"
          android:visibility="gone"
          />
      <ImageView
          android:id="@+id/right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:src="@mipmap/icon_arrow_right"
          />
    </RelativeLayout>
  </RelativeLayout>
</layout>