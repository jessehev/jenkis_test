<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dimen_36dp"
    android:layout_marginTop="@dimen/dimen_20dp"
    android:clipChildren="false"
    android:focusable="true"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/img"
      android:layout_width="@dimen/dimen_140dp"
      android:layout_height="@dimen/dimen_140dp"
      android:layout_centerHorizontal="true"
      />

  <View
      android:id="@+id/bg"
      android:layout_width="@dimen/dimen_140dp"
      android:layout_height="@dimen/dimen_140dp"
      android:layout_centerHorizontal="true"
      android:background="@drawable/selector_metro_item"
      android:duplicateParentState="true"
      />

  <com.ut.wb.ui.MarqueTextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/img"
      android:layout_alignRight="@+id/img"
      android:layout_below="@+id/img"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/dimen_10dp"
      android:gravity="center"
      android:maxEms="8"
      android:textSize="@dimen/txtsize_28sp"
      />

</RelativeLayout>