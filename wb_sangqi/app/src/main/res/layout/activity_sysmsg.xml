<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <RelativeLayout
          android:id="@+id/detailcontent"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingLeft="@dimen/dimen_297dp"
          android:paddingRight="@dimen/dimen_297dp"
          android:visibility="gone"
          >

        <LinearLayout
            android:id="@+id/syscontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:background="@drawable/sysmsgbg"
            android:orientation="vertical"
            >
          <ScrollView
              android:layout_width="wrap_content"
              android:scrollbars="vertical"
              android:layout_height="wrap_content"
              >
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccccc"
                android:textSize="@dimen/dimen_48dp"
                />
          </ScrollView>

          <ImageView
              android:id="@+id/imageurl"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              />

          <TextView
              android:id="@+id/msgtime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#999999"
              android:textSize="@dimen/dimen_30dp"
              />
        </LinearLayout>

        <ImageView
            android:id="@id/icon"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:src="@mipmap/icon_sysmsg"
            />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/listcontent"
          android:layout_marginTop="@dimen/dimen_150dp"
          android:layout_marginRight="@dimen/dimen_100dp"
          android:layout_marginLeft="@dimen/dimen_100dp"
          android:layout_marginBottom="@dimen/dimen_100dp"
          android:layout_width="match_parent"
          android:padding="20dp"
          android:layout_height="match_parent"
          android:background="@mipmap/bg_msg_list"
          android:visibility="visible"
          >

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_60dp"
            android:textColor="#cccccc"
            android:textSize="@dimen/txtsize_60sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/tv_divide"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_height="0.5dp"
            android:background="#26ffffff"
            android:layout_below="@+id/tv_msg"
            />

        <ListView
            android:layout_below="@+id/tv_divide"
            android:layout_marginTop="1dp"
            android:id="@+id/syslist"
            android:paddingLeft="@dimen/dimen_25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
        </ListView>


      </RelativeLayout>
    </RelativeLayout>

  </FrameLayout>


</layout>

