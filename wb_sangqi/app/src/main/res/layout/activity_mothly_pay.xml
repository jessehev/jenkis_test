<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/rl_rootview"
      android:background="@mipmap/bg_base"
      >
    <TextView
        android:id="@+id/tv_mothly_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:textColor="#b3add5"
        android:textSize="@dimen/txtsize_42sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_mothly_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_mothly_name"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/tv_mothly_name"
        android:textSize="@dimen/txtsize_32sp"
        android:textColor="#dddddd"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/ll_mothly_pay"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/tv_mothly_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_20dp"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="按"
          android:textColor="#8680a3"
          android:textSize="20sp"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/shape_up_next"
          android:gravity="center"
          android:text="上页"
          android:textColor="#8680a3"
          android:textSize="19sp"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_weight="1"
          android:background="@drawable/shape_up_next"
          android:gravity="center"
          android:text="下页"
          android:textColor="#8680a3"
          android:textSize="19sp"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="翻页"
          android:textColor="#8680a3"
          android:textSize="20sp"
          />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_margin="@dimen/dimen_20dp"
        android:padding="@dimen/dimen_10dp"
        android:id="@+id/mothly_vp"
        android:layout_below="@+id/tv_mothly_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
  </RelativeLayout>

</layout>
