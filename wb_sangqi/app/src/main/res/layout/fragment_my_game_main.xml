<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <LinearLayout
      android:id="@+id/ll_my_game_all"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:padding="@dimen/dimen_40dp"
      android:layout_marginRight="@dimen/dimen_30dp"
      >
    <LinearLayout
        android:id="@+id/ll_my_game_have_outer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_weight="1"
        android:background="@drawable/selector_my_game_main"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4dp"
        >
      <LinearLayout
          android:id="@+id/ll_my_game_hava"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@mipmap/bg_my_game_have"
          android:orientation="vertical"
          >
        <android.support.v17.leanback.widget.VerticalGridView
            android:id="@+id/my_game_vgv_have"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_75dp"
            app:numberOfColumns="3"
            android:focusable="true"
            app:verticalMargin="@dimen/dimen_10dp"
            app:horizontalMargin="-12dp"

            >

        </android.support.v17.leanback.widget.VerticalGridView>
        <TextView
            android:id="@+id/tv_have"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已有游戏（0）"
            android:textColor="#dddddd"
            android:textSize="@dimen/txtsize_45sp"
            android:textStyle="bold"
            />
      </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_game_down_outer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_weight="1"
        android:background="@drawable/selector_my_game_main"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4dp"
        >
      <LinearLayout
          android:id="@+id/ll_my_game_down"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@mipmap/bg_my_game_down"
          android:orientation="vertical"
          >
        <android.support.v17.leanback.widget.VerticalGridView
            android:id="@+id/my_game_vgv_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_75dp"
            app:numberOfColumns="3"
            android:focusable="true"
            app:verticalMargin="@dimen/dimen_10dp"
            app:horizontalMargin="-12dp"

            >

        </android.support.v17.leanback.widget.VerticalGridView>
        <TextView
            android:id="@+id/tv_download"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下载中（0）"
            android:textColor="#dddddd"
            android:textSize="@dimen/txtsize_45sp"
            android:textStyle="bold"
            />
      </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_game_update_outer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_weight="1"
        android:focusable="true"
        android:background="@drawable/selector_my_game_main"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4dp"
        >
      <LinearLayout
          android:id="@+id/ll_my_game_update"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:focusable="false"
          android:background="@mipmap/bg_my_game_have"
          android:orientation="vertical"
          >
        <android.support.v17.leanback.widget.VerticalGridView
            android:id="@+id/my_game_vgv_update"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:focusable="false"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_75dp"
            app:numberOfColumns="3"
            app:verticalMargin="@dimen/dimen_10dp"
            app:horizontalMargin="-12dp"
            >

        </android.support.v17.leanback.widget.VerticalGridView>
        <TextView
            android:id="@+id/tv_updated"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待更新（0）"
            android:textSize="@dimen/txtsize_45sp"
            android:textColor="#dddddd"
            android:textStyle="bold"
            />
      </LinearLayout>

    </LinearLayout>


  </LinearLayout>

</layout>
