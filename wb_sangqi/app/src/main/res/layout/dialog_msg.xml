<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/dialog_box"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/dimen_28dp"
      android:text="标题"
      android:textColor="@color/white"
      android:textSize="@dimen/txtsize_50sp"
      />

  <FrameLayout
      android:id="@+id/center"
      android:layout_width="@dimen/dimen_950dp"
      android:layout_height="@dimen/dimen_290dp"
      android:layout_below="@+id/title"
      android:layout_marginTop="@dimen/dimen_30dp"
      android:padding="@dimen/dimen_20dp"
      >

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="是否确认购买玩吧斗地主\n价格：25元"
        android:textColor="@color/white"
        android:textSize="@dimen/txtsize_40sp"
        />
  </FrameLayout>

  <FrameLayout
      android:layout_width="@dimen/dimen_950dp"
      android:layout_height="@dimen/dimen_130dp"
      android:layout_below="@+id/center"
      android:layout_centerHorizontal="true"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/enter"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dimen_100dp"
          android:background="@drawable/btn_wati_dialog"
          android:gravity="center"
          android:paddingBottom="@dimen/dimen_10dp"
          android:text="确认"
          android:textColor="@color/white"
          android:textSize="@dimen/txtsize_30sp"
          />

      <Button
          android:id="@+id/cancel"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dimen_100dp"
          android:layout_marginLeft="@dimen/dimen_80dp"
          android:background="@drawable/btn_wati_dialog"
          android:paddingBottom="@dimen/dimen_10dp"
          android:text="取消"
          android:textColor="@color/white"
          android:textSize="@dimen/txtsize_30sp"
          />
    </LinearLayout>
  </FrameLayout>

</RelativeLayout>