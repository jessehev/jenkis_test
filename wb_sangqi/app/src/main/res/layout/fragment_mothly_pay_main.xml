<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/mothly_iv_left"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@mipmap/icon_arrow_left"
        android:layout_height="wrap_content"
        />
    <android.support.v17.leanback.widget.VerticalGridView
        android:id="@+id/vgv_mothly_mian"
        android:layout_width="0dp"
        android:layout_weight="20"
        app:numberOfColumns="5"
        app:verticalMargin="@dimen/dimen_60dp"
        app:horizontalMargin="@dimen/dimen_30dp"
        android:padding="@dimen/dimen_35dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="match_parent"
        >
    </android.support.v17.leanback.widget.VerticalGridView>
    <ImageView
        android:id="@+id/mothly_iv_right"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_arrow_right"
        />
  </LinearLayout>
</layout>
