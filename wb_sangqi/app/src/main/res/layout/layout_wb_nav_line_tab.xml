<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
  <TextView
      android:id="@+id/chinese"
      android:layout_width="@dimen/dimen_321dp"
      android:layout_height="@dimen/dimen_90dp"
      android:background="@drawable/selector_bg_wb"
      android:duplicateParentState="true"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/dimen_71dp"
      android:text="推荐"
      android:textColor="@color/tabtext_selector"
      android:textSize="@dimen/txtsize_40sp"
      android:textStyle="bold"
      />

  <LinearLayout
      android:id="@+id/rl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/chinese"
      android:layout_marginRight="@dimen/dimen_20dp"
      android:layout_toRightOf="@+id/chinese"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@+id/nav"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@mipmap/icon_h_line"
        />

    <ImageView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_h_nav_normal"
        android:duplicateParentState="true"
        />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@+id/nav"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@mipmap/icon_h_line"
        />

  </LinearLayout>

</RelativeLayout>