<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
  <RelativeLayout
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/activity_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:focusable="true"
      android:focusableInTouchMode="true"
      tools:context="activity.appstoreapplication.utstar.com.wanba2.com.utstar.appstoreapplication.activity.MainActivity"
      >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        >

      <ImageView
          android:id="@+id/logo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/icon_logo"
          android:visibility="gone"
          />

      <ImageView
          android:id="@+id/wifi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/dimen_20dp"
          android:layout_toLeftOf="@+id/time"
          android:src="@mipmap/icon_wifi"
          />

      <TextView
          android:id="@+id/time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:text="20:30"
          android:textColor="#afabc0"
          android:textSize="@dimen/txtsize_32sp"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        >

      <ImageView
          android:id="@+id/logo_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dimen_100dp"
          android:src="@mipmap/icon_logo_1"
          />

      <com.ut.wb.ui.TabLayout.TabLayout
          android:id="@+id/tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dimen_50dp"
          android:layout_marginRight="@dimen/dimen_500dp"
          android:layout_marginTop="@dimen/dimen_30dp"
          android:layout_toRightOf="@+id/logo_1"
          android:focusable="true"
          />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_bar"
        android:clipChildren="false"
        />
    <!--android:paddingTop="@dimen/dimen_30dp"-->
    <!--android:paddingBottom="@dimen/dimen_120dp"-->

  </RelativeLayout>
</layout>
