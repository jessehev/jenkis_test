<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:duplicateParentState="true"
    android:focusable="true"
    >
  <RelativeLayout
      android:layout_width="@dimen/dimen_259dp"
      android:layout_height="@dimen/dimen_130dp"
      android:layout_marginTop="@dimen/dimen_30dp"
      android:duplicateParentState="true"
      android:focusable="true"
      >
    <ImageView
        android:layout_width="@dimen/dimen_270dp"
        android:layout_height="@dimen/dimen_116dp"
        android:layout_marginTop="@dimen/dimen_21dp"
        android:background="@mipmap/bg_awrd_2"
        />
    <ImageView
        android:id="@+id/iv_award_bg"
        android:layout_width="@dimen/dimen_95dp"
        android:layout_height="@dimen/dimen_95dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:src="@mipmap/icon_shouji"
        />

    <TextView
        android:id="@+id/tv_award_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_toRightOf="@+id/tv_award_rank"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="玩吧的机械手柄"
        android:textColor="#ff0000"
        android:textSize="@dimen/txtsize_24sp"
        />
    <TextView

        android:id="@+id/tv_award_rank"
        android:layout_width="@dimen/dimen_95dp"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/bg_award_txt"
        android:paddingLeft="@dimen/dimen_10dp"
        android:text="特等奖"
        android:textColor="@color/white"
        android:textSize="@dimen/txtsize_24sp"
        />

  </RelativeLayout>
</RelativeLayout>
