<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:background="@mipmap/bg_order_info"
      android:clipToPadding="false"
      >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_118dp"
        android:layout_marginTop="@dimen/dimen_150dp"
        android:text="订购以下任何产品都能玩此游戏"
        android:textSize="@dimen/txtsize_55sp"
        android:textStyle="bold"
        android:typeface="sans"
        />
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_704dp"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@drawable/shape_order_bg"
        >
      <RelativeLayout
          android:id="@+id/ll"
          android:layout_width="@dimen/dimen_1065dp"
          android:layout_height="@dimen/dimen_121dp"
          android:layout_marginLeft="@dimen/dimen_40dp"
          >
        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/dimen_470dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="产品名称"
            android:textSize="@dimen/txtsize_40sp"
            android:textStyle="bold"
            android:typeface="sans"
            />

        <TextView
            android:id="@+id/pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="价格"
            android:textSize="@dimen/txtsize_40sp"
            android:textStyle="bold"
            android:typeface="sans"
            />
        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_168dp"
            android:layout_height="@dimen/dimen_91dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_btn_order_cancel"
            android:nextFocusRight="@id/back"
            android:onClick="back"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="返回"
            android:textSize="@dimen/txtsize_40sp"
            android:textStyle="bold"
            android:typeface="sans"
            />
      </RelativeLayout>
      <View
          android:id="@+id/line"
          android:layout_width="@dimen/dimen_1105dp"
          android:layout_height="@dimen/dimen_5dp"
          android:layout_below="@id/ll"
          android:background="@color/white"
          />
      <android.support.v17.leanback.widget.VerticalGridView
          android:id="@+id/gird_order"
          android:layout_width="@dimen/dimen_1105dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/ll"
          android:layout_marginTop="@dimen/dimen_35dp"
          android:clipChildren="false"
          android:clipToPadding="false"
          android:paddingRight="@dimen/dimen_30dp"
          app:numberOfColumns="1"
          />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_704dp"
        android:layout_alignTop="@+id/rl"
        android:layout_toRightOf="@+id/rl"
        >
      <ScrollView
          android:id="@+id/decribe_order"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="@dimen/dimen_20dp"
          android:layout_marginRight="@dimen/dimen_60dp"
          android:background="@drawable/shape_order_info_title"
          android:paddingTop="@dimen/dimen_144dp"
          >
        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:padding="@dimen/dimen_20dp"
            android:textSize="@dimen/txtsize_30sp"
            />
      </ScrollView>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_140dp"
          android:layout_marginTop="@dimen/dimen_10dp"
          android:background="@mipmap/icon_order_info_title"
          android:gravity="center"
          android:paddingBottom="@dimen/dimen_20dp"
          android:text="消费提醒"
          android:textSize="@dimen/txtsize_37sp"
          android:textStyle="bold"
          />
    </RelativeLayout>
  </RelativeLayout>
</layout>