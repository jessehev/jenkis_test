<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <RelativeLayout
      android:id="@+id/activity_game_rank"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:visibility="gone"
        >

      <ImageView
          android:id="@+id/logo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/icon_logo"
          />

      <ImageView
          android:id="@+id/wifi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/dimen_20dp"
          android:layout_toLeftOf="@+id/time"
          android:src="@mipmap/icon_wifi"
          />

      <TextView
          android:id="@+id/time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:text="20:30"
          android:textColor="#afabc0"
          android:textSize="@dimen/txtsize_32sp"
          />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/tv_pay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/fl_first"
          android:layout_alignLeft="@+id/fl_first"
          android:layout_marginBottom="@dimen/dimen_38dp"
          android:layout_marginLeft="@dimen/dimen_28dp"
          android:textColor="@color/pray"
          android:textSize="@dimen/txtsize_47sp"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tv_download"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/fl_sec"
          android:layout_alignLeft="@+id/fl_sec"
          android:layout_marginBottom="@dimen/dimen_38dp"
          android:layout_marginLeft="@dimen/dimen_28dp"
          android:textColor="@color/pray"
          android:textSize="@dimen/txtsize_47sp"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tv_newproduct"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/fl_third"
          android:layout_alignLeft="@+id/fl_third"
          android:layout_marginBottom="@dimen/dimen_38dp"
          android:layout_marginLeft="@dimen/dimen_28dp"
          android:textColor="@color/pray"
          android:textSize="@dimen/txtsize_47sp"
          android:textStyle="bold"
          />

      <FrameLayout
          android:id="@+id/fl_first"
          android:layout_width="@dimen/dimen_530dp"
          android:layout_height="@dimen/dimen_688dp"
          android:layout_alignTop="@+id/fl_sec"
          android:layout_toLeftOf="@+id/fl_sec"
          android:background="#32000000"
          >
        <android.support.v17.leanback.widget.VerticalGridView
            android:id="@+id/vgv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:horizontalMargin="-10dp"
            app:numberOfColumns="3"
            />
      </FrameLayout>
      <FrameLayout
          android:id="@+id/fl_sec"
          android:layout_width="@dimen/dimen_530dp"
          android:layout_height="@dimen/dimen_688dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/dimen_26dp"
          android:layout_marginRight="@dimen/dimen_26dp"
          android:background="#32000000"
          >
        <android.support.v17.leanback.widget.VerticalGridView
            android:id="@+id/vgv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:horizontalMargin="-10dp"
            app:numberOfColumns="3"

            />
      </FrameLayout>
      <FrameLayout
          android:id="@+id/fl_third"
          android:layout_width="@dimen/dimen_530dp"
          android:layout_height="@dimen/dimen_688dp"
          android:layout_alignTop="@+id/fl_sec"
          android:layout_gravity="center_horizontal"
          android:layout_toRightOf="@+id/fl_sec"
          android:background="#32000000"
          >
        <android.support.v17.leanback.widget.VerticalGridView
            android:id="@+id/vgv_newproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:horizontalMargin="-10dp"
            app:numberOfColumns="3"
            />
      </FrameLayout>
    </RelativeLayout>
  </RelativeLayout>
</layout>
