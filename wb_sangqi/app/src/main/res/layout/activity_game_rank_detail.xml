<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <RelativeLayout
      android:id="@+id/activity_game_rank_detail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <RelativeLayout
        android:id="@+id/rl_rank_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/rankName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/tv"
          android:textSize="@dimen/txtsize_50sp"
          android:textStyle="bold"
          />

      <TextView
          android:id="@+id/num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/dimen_20dp"
          android:layout_toRightOf="@+id/rankName"
          android:textSize="@dimen/txtsize_40sp"
          android:textStyle="bold"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:orientation="horizontal"
          android:visibility="visible"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="按  "
            android:textColor="@color/updown"
            android:textSize="@dimen/txtsize_28sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_17dp"
            android:background="@drawable/shape_classify_up_down"
            android:paddingBottom="@dimen/dimen_6dp"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_6dp"
            android:text="上页"
            android:textSize="@dimen/txtsize_26sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/shape_classify_up_down"
            android:paddingBottom="@dimen/dimen_6dp"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_6dp"
            android:text="下页"
            android:textSize="@dimen/txtsize_26sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_17dp"
            android:text="翻页"
            android:textColor="@color/updown"
            android:textSize="@dimen/txtsize_28sp"
            />
      </LinearLayout>
      <TextView
          android:id="@+id/tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/num"
          android:layout_alignBottom="@+id/num"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:textColor="#727272"
          android:textSize="@dimen/txtsize_40sp"
          android:textStyle="bold"
          />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_rank_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_rank_detail"
        android:layout_marginBottom="@dimen/dimen_110dp"
        android:layout_marginLeft="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_80dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:clipChildren="false"
        />

    <ImageView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:src="@mipmap/icon_arrow_left"
        />
    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:src="@mipmap/icon_arrow_right"
        />
  </RelativeLayout>
</layout>
