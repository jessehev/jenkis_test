<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipChildren="false"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/dimen_120dp"
      android:paddingRight="@dimen/dimen_80dp"
      >

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/game_my"
          android:layout_width="@dimen/dimen_200dp"
          android:layout_height="@dimen/dimen_200dp"
          android:layout_below="@+id/new_activity"
          android:layout_marginTop="@dimen/dimen_30dp"
          android:layout_weight="1"
          android:focusable="true"
          android:src="@drawable/selector_my_game"
          />

      <ImageView
          android:id="@+id/new_activity"
          android:layout_width="@dimen/dimen_200dp"
          android:layout_height="@dimen/dimen_200dp"
          android:layout_below="@+id/game_rank"
          android:layout_marginTop="@dimen/dimen_30dp"
          android:layout_weight="1"
          android:focusable="true"
          android:src="@drawable/selector_new_activity"
          />
      <ImageView
          android:id="@+id/game_rank"
          android:layout_width="@dimen/dimen_200dp"
          android:layout_height="@dimen/dimen_200dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_weight="1"
          android:focusable="true"
          android:src="@drawable/selector_game_rank"
          />

    </RelativeLayout>

    <com.ut.wb.ui.metro.MetroLayout
        android:id="@+id/metro"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/bar"
        android:layout_alignTop="@+id/bar"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_toRightOf="@+id/bar"
        android:clipChildren="false"
        />
    <!--android:layout_marginTop="@dimen/dimen_60dp"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bar"
        android:layout_alignTop="@+id/bar"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_toRightOf="@+id/metro"
        >

      <ImageView
          android:id="@+id/arrow_right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/dimen_20dp"
          android:src="@mipmap/icon_arrow_right"
          />
    </RelativeLayout>

  </RelativeLayout>
</layout>
